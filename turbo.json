{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "public-api#build": {
      "dependsOn": ["^build"],
      "env": ["NODE_ENV", "MONGO_URL", "SECRET_KEY"],
      "outputs": [".next/**"]
    },
    "web#build": {
      "dependsOn": ["^build"],
      "env": [
        "NODE_ENV",
        "BASE_URL",
        "NAMESPACES",
        "API_KEY",
        "MONGO_URL",
        "SECRET_KEY",
        "EMAIL_SERVER_HOST",
        "EMAIL_SERVER_PORT",
        "EMAIL_SERVER_USER",
        "EMAIL_SERVER_PASS",
        "EMAIL_FROM"
      ],
      "outputs": [".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "test": {}
  }
}
